<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:showIn="@layout/activity_beranda"
    tools:context=".Beranda">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:gravity="center_horizontal"
            android:text="@string/app_name"
            android:textSize="50dp"
            android:textStyle="bold"
            android:textColor="@color/txt_font" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:text="@string/appGeo"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/txt_font" />

        <ImageView
            android:layout_width="288dp"
            android:layout_height="250dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/ipb"
            android:scaleType="fitCenter" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">

        <Button
            android:id="@+id/btnTambah"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@color/btn"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/btnTambah"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:onClick="Tambah Aset"
            android:state_pressed="true"
            style="?android:attr/borderlessButtonStyle"/>

        <Button
            android:id="@+id/btnPencarian"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/btn"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/btnPencarian"
            android:textStyle="bold"
            android:textColor="@color/white"
            style="?android:attr/borderlessButtonStyle" />

    </LinearLayout>

</RelativeLayout>
