        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Beranda"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Tambah"
            android:label="@string/title_activity_tambah"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".Pencarian"
            android:label="@string/title_activity_pencarian"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".Hasilpencarian"
            android:label="@string/title_activity_hasil_pencarian"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <!--
             ATTENTION: This was auto-generated to add Google Play services to your project for
             App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
